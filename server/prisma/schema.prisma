generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}


enum UserRole {
  ADMIN
  USER
  DELEVERYBOY
  RESTURANT
}



enum FoodType {
  VEG
  NON_VEG
}


model User {
  id        String   @id @default(uuid())
  name      String?
  email     String   @unique
  phone     String?
  image     String?
  role      UserRole @default(USER)
  password  String? 

  googleId  String? @unique

  ratings   DishRating[]  

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

}

model Category {
  id        String   @id @default(uuid())
  name      String   @unique
  image     String?
  order     Int      @default(0)

  dishes    Dish[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Dish {
  id          String      @id @default(uuid())
  name        String
  description String?
  image       String?
  basePrice   Float?        

  isAvailable Boolean @default(true) 
  inMenu      Boolean @default(true) 
  isDeleted   Boolean @default(false)

  foodType    FoodType

  categoryId  String
  category    Category   @relation(fields: [categoryId], references: [id])

  sizes       DishSize[]
  addons      DishAddon[]
  ratings     DishRating[]
  allergens   String[]  

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model DishSize {
  id        String @id @default(uuid())
  name      String 
  price     Float    
  dishId    String
  dish      Dish   @relation(fields: [dishId], references: [id])

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Addon {
  id        String @id @default(uuid())
  name      String @unique
  price     Float

  dishes    DishAddon[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model DishAddon {
  id      String @id @default(uuid())

  dishId  String
  dish    Dish   @relation(fields: [dishId], references: [id])

  addonId String
  addon   Addon  @relation(fields: [addonId], references: [id])

  updatedAt DateTime @updatedAt

  @@unique([dishId, addonId])
}

model DishRating {
  id        String   @id @default(uuid())
  rating    Int      
  review    String?  
  userId    String
  user      User     @relation(fields: [userId], references: [id])

  dishId    String
  dish      Dish     @relation(fields: [dishId], references: [id])

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([userId, dishId]) 
}

